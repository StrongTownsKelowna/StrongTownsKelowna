<div class="" id="<%= dom_id article %>">
  <div class="mb-4 md:flex md:justify-between md:items-end lg:flex-col lg:items-start">
    <h3 class="text-blue-dark text-2xl font-georgia"><%= article.title %></h3> 
    <p><%= article.created_at.to_formatted_s(:long) %></p>
    <p><%= article.author %></p>
  </div>
  <%= render partial: 'components/line_break' %>
  <%= article.body %>
</div>
