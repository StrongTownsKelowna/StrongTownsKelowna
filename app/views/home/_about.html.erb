  <% campaigns.each do |campaign| %>
    <li class="bg-whitesmoke rounded-lg p-4 md:min-h-128 lg:min-w-128 lg:min-h-128">
      <h3 class="text-blue-dark font-georgia mb-4"><%= campaign[:title] %></h3> 
      <div class="flex gap-4">
        <div class="w-full h-52 mb-4 md:h-96 overflow-hidden rounded-lg">
          <%= image_tag campaign[:img], :class => "h-full rounded-lg w-full object-cover object-left scale-125 md:scale-200 lg:scale-95" %>
        </div>
        <div class="w-full h-52 mb-4 md:h-96 overflow-hidden rounded-full">
          <%= image_tag campaign[:img], :class => "h-full w-full rounded-full object-cover object-right scale-125 md:scale-200 lg:scale-95" %>
        </div>
      </div>
      <p ><%= campaign[:description] %></p>
    </li>
  <% end %>
</ul>
<div class="mb-24 flex justify-center items-center lg:mb-96">
  <%= button_to "MORE ABOUT US HERE", about_path, method: "get", class: "transition duration-300 hover:bg-blue-dark hover:text-white py-2 px-4 rounded-lg text-blue-dark border border-blue-dark" %>
</div>
